enum ProductCategory {
  LAPTOPS
  T_SHIRTS
  SWEATSHIRTS
  HATS
  DRINKWARE
  TAILGATE_SPIRIT
}


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  name         String?
  passwordHash String
  role         Role      @default(STUDENT)
  createdAt    DateTime  @default(now())
  orders       Order[]
  products     Product[]
}
model Order {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  buyer     User        @relation(fields: [buyerId], references: [id])
  totalCents Int          @default(0)   // ðŸ‘ˆ add this line
  buyerId   Int
  items     OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  qty       Int
}

enum Role {
  STUDENT
  SELLER
  ADMIN
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  priceCents  Int
  isApproved  Boolean  @default(false)
  category    ProductCategory
  imageUrl    String?
  imageAlt    String?

  inStock     Boolean  @default(true)   // ðŸ‘ˆ add this

  orderItems         OrderItem[]
  outOfStockRequests OutOfStockRequest[]

  owner   User? @relation(fields: [ownerId], references: [id])
  ownerId Int?
}

model OutOfStockRequest {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  requesterEmail String
  requesterName  String?
  productId      Int?
  product        Product? @relation(fields: [productId], references: [id])
  productName    String?
  note           String?
  status         String   @default("PENDING")
}
